---
#prime: https://runelite.net/

- name: Create game directory
  ansible.builtin.file:
    path: "{{game_dir}}"
    state: directory
    mode: '0755'

- name: Download AppImage
  ansible.builtin.get_url:
    url: "{{app_image_url}}"
    dest: "{{game_dir}}/{{app_image}}"
    mode: '0755'

- include_tasks: 'fuse/{{ ansible_os_family }}/{{ ansible_distribution }}'